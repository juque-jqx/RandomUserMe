<resources>
    <!-- Base application theme. -->
    <style name="Base.Theme.RandomUser" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
        <item name="colorPrimary">@color/black</item>
        <item name="colorSecondary">@color/white</item>
    </style>

    <style name="Theme.RandomUser" parent="Base.Theme.RandomUser" />

    <style name="AppBarTheme" parent="@style/ThemeOverlay.AppCompat.ActionBar">
        <item name="android:fontFamily">@font/oswald_medium</item>
        <item name="android:textAllCaps">true</item>
        <item name="textAllCaps">true</item>
        <item name="android:textColor">@color/black</item>
        <item name="fontWeight">500</item>
        <item name="android:fontWeight">500</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="ContactBarTheme" parent="AppBarTheme">
        <item name="android:fontFamily">@font/oswald_medium</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="ToolbarMenu" parent="Widget.AppCompat.PopupMenu.Overflow">
        <item name="android:textColor">@color/black</item>
        <item name="android:fontFamily">@font/oswald_medium</item>
        <item name="android:textAllCaps">true</item>
        <item name="textAllCaps">true</item>
        <item name="fontWeight">500</item>
        <item name="android:fontWeight">500</item>
    </style>

    <style name="ItemContactTitle">
        <item name="android:fontFamily">@font/opensans_semibold</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">18sp</item>
        <item name="android:layout_marginStart">16dp</item>
    </style>

    <style name="ItemContactSubtitle">
        <item name="android:fontFamily">@font/opensans_regular</item>
        <item name="android:textColor">@color/grey</item>
        <item name="android:textSize">14sp</item>
        <item name="android:layout_marginStart">16dp</item>
    </style>

    <style name="SearchField">
        <item name="android:colorPrimary">@color/black</item>
        <item name="android:colorAccent">@color/black</item>
        <item name="android:fontFamily">@font/opensans_regular</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:cursorVisible">true</item>
        <item name="cursorColor">@color/black</item>
        <item name="colorControlActivated">@color/black</item>
    </style>

    <style name="DetailHintText">
        <item name="android:fontFamily">@font/opensans_semibold</item>
        <item name="android:textColor">@color/grey</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="DetailDataText">
        <item name="android:fontFamily">@font/opensans_semibold</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">18sp</item>
        <item name="android:layout_marginTop">8dp</item>
    </style>

    <style name="TextInputLayoutOpenSans" parent="Widget.Material3.TextInputLayout.OutlinedBox">
        <item name="boxStrokeColor">@color/lightGrey</item>
        <item name="boxStrokeWidth">0dp</item>
        <item name="boxStrokeWidthFocused">2dp</item>
        <item name="android:fontFamily">@font/opensans_regular</item>
        <item name="hintTextColor">@color/grey</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textColorHint">@color/grey</item>
        <item name="android:paddingStart">0dp</item>
        <item name="android:paddingEnd">0dp</item>
        <item name="android:paddingBottom">0dp</item>
        <item name="android:textSize">12sp</item>
        <item name="android:background">@drawable/detail_data_fields_bg</item>
        <item name="editTextStyle">@style/EditTextOpenSans</item>
    </style>

    <style name="EditTextOpenSans" parent="Widget.Material3.TextInputEditText.OutlinedBox">
        <item name="android:background">@null</item>
        <item name="android:fontFamily">@font/opensans_semibold</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">16sp</item>
        <item name="android:paddingStart">0dp</item>
        <item name="android:paddingEnd">0dp</item>
        <item name="android:paddingTop">16dp</item>
        <item name="android:paddingBottom">8dp</item>
    </style>
</resources>